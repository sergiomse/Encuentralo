<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivTagLeft"
        android:src="@drawable/tag_bk_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivTagRight"
        android:src="@drawable/tag_bk_rigth"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTag"
        android:layout_toRightOf="@+id/ivTagLeft"
        android:layout_toLeftOf="@+id/ivTagRight"
        android:background="@drawable/tag_bk_center" />
</RelativeLayout>